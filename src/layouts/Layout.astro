---
interface Props {
  title: string;
}

const { title } = Astro.props;

let logoUrl = '/logob.png'; // Default logo URL
const backendUrl = import.meta.env.BACKEND_URL; // Ambil BACKEND_URL dari variabel lingkungan

try {
  const response = await fetch(backendUrl);
  if (response.ok) {
    const data = await response.json();
    if (data && data.dama_logo) {
      logoUrl = data.dama_logo;
    }
  } else {
    console.error('Failed to fetch logo from backend:', response.status);
  }
} catch (error) {
  console.error('Error fetching logo from backend:', error);
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
